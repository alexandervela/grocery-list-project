<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <price>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>Edit Item</h1>

      <form action="/topics/<%= item.topicId %>/items/<%= item.id %>/update" method="post">
        <div class="form-group">
          <label for="name">Item Name</label>
          <input value="<%= item.name %>" type="text" class="form-control" name="name" aria-describedby="nameHelp" placeholder="Enter Item Name">
        </div>
        <div class="form-group">
          <label for="price">Item Price</label>
          <textarea rows="4" class="form-control" name="price" placeholder="Enter Price"><%= item.price %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </price>

  <% include ../static/partials/footer.ejs %>

</html>