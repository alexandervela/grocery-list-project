<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
    <title>View <%= list.title %></title>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <h1 class="white-heading"><%= list.title %></h1>
      <% if(currentUser.isOwner()) { %>
      <a href="/lists/<%= list.id %>/edit" class="btn btn-warning">Edit</a>
      <form style="display:initial" action="/lists/<%= list.id %>/destroy" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
      <% } %>
      <hr>

      <h1 class="white-heading">Items</h1>
      <% if(currentUser) { %>
      <a href="/lists/<%= list.id %>/items/new" class="btn btn-success">New Item</a>
      <% } %>
      <section class="white-text" id="item-list">
        <% if(list.items) { %>
          <% list.items.forEach((item) => { %>
            <%- include("../items/show.ejs", {item}) %>
          <% }) %>
        <% } %>
       </section>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>

  <% include ../static/partials/footer.ejs %>

</html>